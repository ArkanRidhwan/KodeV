<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    tools:context=".ui.user.register.RegisterUserFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="360dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Registration"
                android:textColor="@color/teal_700"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_namaUserRegister"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:hint="Nama"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <EditText
                android:id="@+id/et_emailUserRegister"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Emai"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="@+id/et_namaUserRegister"
                app:layout_constraintStart_toStartOf="@+id/et_namaUserRegister"
                app:layout_constraintTop_toBottomOf="@+id/et_namaUserRegister" />

            <EditText
                android:id="@+id/et_passwordUserRegister"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="@+id/et_emailUserRegister"
                app:layout_constraintStart_toStartOf="@+id/et_emailUserRegister"
                app:layout_constraintTop_toBottomOf="@+id/et_emailUserRegister" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_userRegister"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_btn"
                android:text="register"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/et_passwordUserRegister"
                app:layout_constraintStart_toStartOf="@+id/et_passwordUserRegister"
                app:layout_constraintTop_toBottomOf="@+id/et_passwordUserRegister" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>