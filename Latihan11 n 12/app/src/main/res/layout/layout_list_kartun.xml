<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DADADA">

        <ImageView
            android:id="@+id/iv_kartun"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Species"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/iv_kartun"
            app:layout_constraintTop_toBottomOf="@+id/iv_kartun" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="44dp"
            android:text="Nama:"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/iv_kartun"
            app:layout_constraintTop_toBottomOf="@+id/iv_kartun" />

        <TextView
            android:id="@+id/tv_name_content"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="44dp"
            android:text="Nama"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/iv_kartun" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="3dp"
            android:text="Status:"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <TextView
            android:id="@+id/tv_status_content"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="3dp"
            android:text="Status"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/tv_name_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_content" />

        <TextView
            android:id="@+id/tv_origin"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="3dp"
            android:text="Origin:"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/tv_status"
            app:layout_constraintTop_toBottomOf="@+id/tv_status" />

        <TextView
            android:id="@+id/tv_origin_content"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="3dp"
            android:text="Origin"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/tv_status_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_status_content" />

        <TextView
            android:id="@+id/tv_created"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="3dp"
            android:text="Created:"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/tv_origin"
            app:layout_constraintTop_toBottomOf="@+id/tv_origin" />

        <TextView
            android:id="@+id/tv_created_content"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginTop="3dp"
            android:text="Content"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/tv_origin_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_origin_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>